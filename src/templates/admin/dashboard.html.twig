{% extends 'admin.html.twig' %}

{% block title %}
    {{ page }}
{% endblock %}

{% block content %}
    <div class="app-dashboard-body-content off-canvas-content" data-off-canvas-content>

        <h2 class="text-center">Vue d’ensemble</h2>
        <hr>
        <div class="grid-x grid-margin-x grid-padding-x margin-top-2">
            <section class="cell large-6">
                <h3>Spécialités</h3>
                <table class="hover text-center dashboard">
                    <thead>
                    <tr>
                        <th class="text-center">id</th>
                        <th class="text-center">Titre</th>
                        <th class="text-center show-for-large">Statut</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for feature in features %}
                        <tr>
                            <td>{{ feature.id }}</td>
                            <td><a href="/features/{{ feature.id }}/edit">{{ feature.title }}</a></td>
                            {%  if feature.published == "1" %}
                                <td class="show-for-large">Publié</td>
                            {%  else %}
                                <td class="show-for-large">Non publié</td>
                            {%  endif %}
                        </tr>
                    {%  endfor %}
                    </tbody>
                </table>
            </section>
            <section class="cell large-6">
                <h3>Fiches conseils</h3>
                <table class="hover text-center dashboard">
                    <thead>
                    <tr>
                        <th class="text-center">id</th>
                        <th class="text-center">Titre</th>
                        <th class="text-center show-for-large">Statut</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for guide in guides %}
                    <tr>
                        <td>{{ guide.id }}</td>
                        <td><a href="/guides/{{ guide.id }}/edit">{{ guide.title }}</a></td>
                        {%  if guide.published == "1" %}
                            <td class="show-for-large">Publié</td>
                        {%  else %}
                            <td class="show-for-large">Non publié</td>
                        {%  endif %}
                    </tr>
                    {%  endfor %}
                    </tbody>
                </table>
            </section>
        </div>

    </div>
{% endblock %}
